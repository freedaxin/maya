srcdir = "."
blddir = "build"
APPNAME = "node-sqlparser"
VERSION = "0.0.1"


def set_options(opt):
  opt.tool_options("compiler_cxx")

def configure(conf):
  conf.check_tool("compiler_cxx")
  conf.check_tool("node_addon")

def build(bld):
  obj = bld.new_task_gen("cxx", "shlib", "node_addon")
  # without this, eio_custom doesn't keep a ref to the req->data
  obj.cxxflags = ["-Wall","-D_FILE_OFFSET_BITS=64", "-D_LARGEFILE_SOURCE","-I./include","-I/usr/include","-I/usr/local/include/node","-I/usr/include/glib-2.0","-I/usr/lib64/glib-2.0/include"]
  obj.target = "sqlparser"
  obj.source = ["sqlparser.cc"]
  obj.libpath = ["/usr/local/lib","/usr/local/lib/node","./lib"]
  obj.lib = ["glib-2.0"]
  obj.linkflags = ["-g"]
  obj.add_obj_file("lib/sql-tokenizer.a"); 
